---
import type { GetStaticPaths } from "astro";
import { setDynamicParams, switchLocalePath, getLocalePlaceholder, t } from "i18n:astro";
import Layout from "~/layouts/Layout.astro";

export const getStaticPaths = (() => {
  const locale = getLocalePlaceholder();

  const slugs = [
    {
      en: "a",
      fr: "d",
    },
    {
      en: "b",
      fr: "e",
    },
    {
      en: "c",
      fr: "f",
    },
  ];

  return slugs.map((slug) => ({
    params: {
      slug: slug[locale],
    },
    props: {
      slugs: slug,
    },
  }));
}) satisfies GetStaticPaths;

const { slug } = Astro.params;
const { slugs } = Astro.props;

setDynamicParams(
  Object.entries(slugs)
    .map(([locale, slug]) => ({ [locale]: { slug } }))
    .reduce(
      (e, obj) => ({
        ...obj,
        ...e,
      }),
      {}
    )
);

console.log({
  en: switchLocalePath("en"),
  fr: switchLocalePath("fr"),
});

const title = t("blog");
---

<Layout {title}>
  <h1>{title} {slug}</h1>
</Layout>
